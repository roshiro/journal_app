<h2>Open Trades</h2>

<div class="row">
  <% @open_entries.each do |entry| %>
    <div class="card mb-3 mr-3" style="min-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="..." class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= entry.instrument.name %></h5>
            <p class="card-text"><%= entry.open_date %></p>
            <p class="card-text"><small class="text-muted">Last updated . mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Entry', new_entry_path %>
